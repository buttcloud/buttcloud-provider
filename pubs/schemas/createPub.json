{
  "title": "Pub",
  "description": "A PeachCloud Pub",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 255
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]{0,61}[a-z0-9]|[a-z0-9]$",
      "maxLength": 63 
    },
    "domain": {
      "type": "string",
      "maxLength": 255,
      "enum": [
        "peach.cloud"
      ]
    }
  },
  "required": [
    "name",
    "slug",
    "domain"
  ]
}
